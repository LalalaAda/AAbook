<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6eae3">
    <LinearLayout
        android:id="@+id/zb_view0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/zb_btn1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:background="@color/common_blue"
            android:text="选择"
            android:textColor="#595959"
            android:textSize="14sp" />
        <Button
            android:id="@+id/zb_btn2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/pay_btn"
            android:layout_weight="1"
            android:background="@color/common_white"
            android:text="添加"
            android:textColor="#595959"
            android:textSize="14sp" />
    </LinearLayout>
    <android.support.v7.widget.CardView
        android:id="@+id/zb_view1"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="#e7609e"
    android:outlineProvider="paddedBounds"
        android:layout_below="@id/zb_view0"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:layout_margin="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="选择账本"
                android:textColor="#444"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"/>
            <Spinner
                android:id="@+id/zb_sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/zb_view2"
        android:layout_below="@id/zb_view0"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#e7609e"
        android:outlineProvider="paddedBounds"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:layout_margin="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="添加账本"
                android:textColor="#444"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:id="@+id/zb_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="输入账本名"
                android:layout_marginTop="20dp"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/zb_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:textColor="#fff"
            android:textSize="20sp"
            android:text="取消"
            />

        <Button
            android:id="@+id/zb_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:textColor="#fff"
            android:textSize="20sp"
            android:text="确定"
            />
    </LinearLayout>
</RelativeLayout>